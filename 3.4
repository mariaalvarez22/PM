@Composable
fun EggScreen(modifier: Modifier = Modifier) {
    // Contador de toques
    var taps by remember { mutableStateOf(0) }

    // Metas: primero se agrieta, luego nace
    val crackGoal = 10
    val hatchGoal = 20

    // Progreso (0.0 a 1.0) seg√∫n los taps
    val progress = (taps.toFloat() / hatchGoal).coerceIn(0f, 1f)

    // Cambia el emoji seg√∫n los taps
    val eggEmoji = when {
        taps >= hatchGoal -> "üê£"   // si llegamos a 20 ‚Üí pollito
        taps >= crackGoal -> "üí•ü•ö" // si llegamos a 10 ‚Üí huevo roto
        else -> "ü•ö"               // al inicio ‚Üí huevo normal
    }

    // Cambia el mensaje seg√∫n los taps
    val message = when {
        taps >= hatchGoal -> "¬°Ha nacido!"
        taps >= crackGoal -> "¬°Se agrieta!"
        else -> "Toca el huevo..."
    }

    // Pantalla principal
    Column(
        modifier = modifier.fillMaxSize(),
        verticalArrangement = Arrangement.Center,
        horizontalAlignment = Alignment.CenterHorizontally
    ) {
        // Huevo grande ‚Üí cada vez que lo tocas, suma 1 al contador
        Text(
            text = eggEmoji,
            fontSize = 96.sp,
            textAlign = TextAlign.Center,
            modifier = Modifier.clickable { taps++ }
        )

        Spacer(modifier = Modifier.height(16.dp))

        // Muestra cu√°ntas veces lo tocaste
        Text(text = "Taps: $taps", fontSize = 24.sp)

        Spacer(modifier = Modifier.height(8.dp))

        // Mensaje de estado
        Text(text = message, fontSize = 20.sp)

        Spacer(modifier = Modifier.height(24.dp))

        // Barra de progreso (0% a 100%)
        LinearProgressIndicator(
            progress = progress,
            modifier = Modifier
                .fillMaxWidth(0.7f) // ancho de la barra (70% de la pantalla)
                .height(12.dp)      // grosor de la barra
        )

        Spacer(modifier = Modifier.height(8.dp))

        // Porcentaje del progreso en n√∫meros
        Text(text = "${(progress * 100).toInt()}%", fontSize = 18.sp)
    }
}

